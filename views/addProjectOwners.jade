extends ./layout.jade

block link
    link(rel="stylesheet",href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
   
block title
  title Agregar Project Owner   
    
block content
  div(class="container")
    div(class="widget-header") 
      i(class="icon-plus-sign")
      h3 Agregar Project Owner
    div(class="widget widget-table action-table")
      div(class="widget-header") 
        i(class="icon-th-list")
        h3 Lista de candidatos
      div(class="widget-content")
        table(class="table table-striped table-bordered")
          thead
            tr
              th Nombre completo 
              th(class="td-actions") Agregar
          tbody
            each user in users
              tr
                td #{user.nombreCompleto} 
                td(class="td-actions")
                  form(action="/agregarPO/#{user._id}/#{idProy}", method="POST")
                    input(type="submit" class="btn btn-primary" value="agregar" name="agregarDes")
  
  script.
    document.getElementById("newproject").style.visibility = "hidden";
